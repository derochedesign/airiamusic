<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <meta name="theme-color" content="#ffffff"/>
    
    <title>airia</title>
    <link rel="icon" href="img/favicon.png">
    <link rel="stylesheet" href="css/main.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  </head>
  <body>
      
    <audio id="audioPlayer"></audio>
    
    <div id="context" class="context">
        <div class="context-menu">
            <div id="contextInfo" class="related-image">
            </div>
            
            <ul class="media">
                <li data-action="save"><div><h3>Save</h3></div></li>
                <li data-action="download"><div><h3>Download</h3></div></li>
                <li data-action="save"><div><h3>Go to...</h3></div></li>
            </ul>
            <h4>Playlists</h4>
            <div class="quickshot-row">
                <div class="quickshot-entries">
                    <button class="quickshot playlist">
                        <div class="shot"><img src="img/icons/add.svg" alt="test playlist icon"></div>
                        <div class="label"><h4>Create</h4></div>
                    </button>
                    <button class="quickshot playlist">
                        <div class="shot"><img src="img/icons/collection.svg" alt="test playlist icon"></div>
                        <div class="label"><h4>Mellow</h4></div>
                    </button>
                    <button class="quickshot playlist">
                        <div class="shot"><img src="img/icons/collection.svg" alt="test playlist icon"></div>
                        <div class="label"><h4>litty!</h4></div>
                    </button>
                    <button class="quickshot playlist">
                        <div class="shot"><img src="img/icons/collection.svg" alt="test playlist icon"></div>
                        <div class="label"><h4>dope af :p supa hottie</h4></div>
                    </button>
                    <button class="quickshot playlist">
                        <div class="shot"><img src="img/icons/collection.svg" alt="test playlist icon"></div>
                        <div class="label"><h4>:3 x3</h4></div>
                    </button>
                    <button class="quickshot playlist">
                        <div class="shot"><img src="img/icons/collection.svg" alt="test playlist icon"></div>
                        <div class="label"><h4>Gooten</h4></div>
                    </button>
                    <button class="quickshot playlist">
                        <div class="shot"><img src="img/icons/collection.svg" alt="test playlist icon"></div>
                        <div class="label"><h4>chooly</h4></div>
                    </button>
                </div>
            </div>
        </div>
    </div>
      
    <section id="fullPlayer" class="full-player">
        <div class="topbar">
            <button id="collBtn" class="button icon"><img src="img/icons/collapse.svg"></button>
            <div class="song-info">
                <h2>Sigrid</h2>
                <h1>Fake Friends</h1>
            </div>
        </div>
        <div class="song-art">
            <img class="artwork" src="img/art/fakefriends-sigrid.jpg">
            <button class="button icon special variate-btn"><img src="img/icons/variate.svg"></button>
        </div>
        
        <div class="variation">
            <div class="variate-info">
                <h3>Excited-Tulip</h3>
                <h4>Variation</h4>
            </div>
            <div class="variate-cells">
                <div class="variate-cell"></div>
                <div class="variate-cell"></div>
                <div class="variate-cell"></div>
                <div class="variate-cell"></div>
            </div>
        </div>
        <div class="player">
            <div class="player-controls">
                <div>
                    <button class="button icon" data-control="toggle-play"><img src="img/icons/play.svg"></button>
                    <button class="button icon"><img src="img/icons/save.svg"></button>
                </div>
                <div>
                    <button class="button icon"><img src="img/icons/prev.svg"></button>
                    <button class="button icon"><img src="img/icons/next.svg"></button>
                </div>
            </div>
            <div class="player-timeline">
                <div class="time-bar"><div class="duration-bar"></div></div>
                <h5 id="tempTime">1:32</h5>
                <h5>3:03</h5>
            </div>
        </div>
    </section>
    
    <section id="theMenu" class="menu">
    </section>
      
    <nav class="dock">
        <div class="main-nav">
            <button data-select="feed" class="icon active"><img src="img/icons/feed.svg"><div class="active-marker"></div></button>
            <button data-select="library" class="icon"><img src="img/icons/collection.svg"><div class="active-marker"></div></button>
        </div>
        <div id="miniPlayer" class="mini-player">
            <div id="miniInfo" class="mini-info">
                <!-- js populate -->
            </div>
            <div class="song-controls">
                <button class="icon"><img src="img/icons/prev.svg"></button>
                <button class="icon"><img src="img/icons/next.svg"></button>
                <button class="icon" data-control="toggle-play"><img src="img/icons/play.svg"></button>
            </div>
            <div id="durationBar" class="duration-bar"></div>
        </div>
    </nav>
    
    <main class="content">
        <div class="feed">
            <section class="topbar">
                <div class="menu-btn"><button id="menuBtn" class="icon"><img src="img/icons/menu.svg"></button></div>
                <div type="text" class="search">
                    <button class="icon"><img src="img/icons/search.svg"></button>
                    <input class="search-bar" type="search" placeholder="Search">
                </div>
            </section>
            <section id="navHead" class="nav-head">
            </section>
            
            <section class="content-inner">
                
                <section class="quick-action">
                    <button class="button icon special">
                        <img src="img/icons/variate.svg">
                    </button>
                    <h2>Shuffle Recents</h2>
                </section>
                
                <section id="feedElem" class="content-entries">
                </section>
                
            </section>
        </div>
    </main>
    
    <script src="js/main.js" charset="utf-8"></script>
  </body>
</html>
